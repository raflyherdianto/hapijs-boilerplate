# ==============================================
# üñ•Ô∏è SERVER CONFIGURATION
# ==============================================
PORT=3000
HOST=localhost
# Set HOST=0.0.0.0 for Docker or remote access

# ==============================================
# üóÑÔ∏è DATABASE CONFIGURATION (Development)
